generator client {
    provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  user
  admin
  seller
}

model users {
  id           Int @id @default(autoincrement())
  fullName     String
  email        String @unique
  password     String 
  phone        String
  role         Role @default(user) 
}